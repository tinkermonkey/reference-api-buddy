[flake8]
max-line-length = 120
max-complexity = 25
exclude = __pycache__,*.pyc,.git,.venv,build,dist,*.egg-info,htmlcov,.pytest_cache,tests/,smoke_tests/
extend-ignore = E203,W503,E402,F401,F841,F811,F541,E712,F824,D100,D101,D102,D103,D104,D105,D107,D200,D202,D205,D209,D301,D400,D401,C901
per-file-ignores =
    smoke_tests/*: E501
    test_*.py: E501,C901
    */__init__.py: D104
